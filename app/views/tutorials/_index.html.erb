<div class="masonry" data-turbolinks="false">
  <% @tutorials.each_with_index do |tutorial, index| %>
    <div class="item">
      <a href="<%= tutorial.path %>" class="Vlt-card Vlt-card--image Nxd-card--tutorials">
        <div class="Vlt-card__image Vlt-card__image--tech Vlt-card__image--blue">
          <div class="Vlt-badge Vlt-badge--large Vlt-badge--blue"><%= tutorial.subtitle %></div>
        </div>
        <div class="Vlt-card__content">
          <h2>
              <span><%= tutorial.title %></span>
          </h2>
          <p><%= tutorial.description %></p>
          <div class="Vlt-card__cta">
            <div class="Vlt-btn Vlt-btn--secondary">Read more</div>
          </div>
        </div>
      </a>
    </div>
  <% end %>
</div>
